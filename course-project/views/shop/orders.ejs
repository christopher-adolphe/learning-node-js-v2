<%- include('../partials/_start.ejs') %>
</head>
<body>
  <div class="app">
    <%- include('../partials/_header.ejs') %>

    <main class="app__main">
      <div class="container">
        <h1><%= pageTitle %></h1>

        <% if (orders.length) { %>
          <ul>
            <% orders.forEach(order => { %>
              <li>
                <h4>Order ID: (<%= order._id %>) - <a href="/orders/<%= order._id %>">Invoice</a></h4>

                <ul>
                  <% order.items.forEach(item => { %>
                    <li>
                      <%= item.product.title %> (<%= item.quantity %>)
                    </li>
                  <% }) %>
                </ul>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>Sorry, you don't have any orders yet.</p>
        <% } %>
      </div>
    </main>
  </div>
<%- include('../partials/_end.ejs') %>
