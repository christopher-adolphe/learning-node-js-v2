<body>
  <div class="app">
    <%- include('../partials/_header.ejs') %>

    <main class="app__main">
      <div class="container">
        <h1>Shopping cart</h1>

        <% if (cartItems.length) { %>
          <ul>
            <% cartItems.forEach(product => { %>
              <li>
                <p><%= product.title %> (<%= product.cartItem.quantity %>)</p>

                <form action="/cart-delete-item" method="POST">
                  <input type="hidden" name="productId" value="<%= product.id %>" />
                  <button type="submit" class="btn btn-edit">Remove</button>
                </form>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>Sorry, your cart is currently empty.</p>
        <% } %>
      </div>
    </main>
  </div>
<%- include('../partials/_end.ejs') %>
