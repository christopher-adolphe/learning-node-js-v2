<body>
  <div class="app">
    <%- include('../partials/_header.ejs') %>

    <main class="app__main">
      <div class="container">
        <h1>Shopping cart</h1>

        <% if (cartItems.length) { %>
          <ul>
            <% cartItems.forEach(cartItem => { %>
              <li><%= cartItem.product.title %> (<%= cartItem.quantity %>)</li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>Sorry, your cart is currently empty.</p>
        <% } %>
      </div>
    </main>
  </div>
<%- include('../partials/_end.ejs') %>
