<%- include('../partials/_start.ejs') %>
  <link rel="stylesheet" href="/css/form.css" />
</head>
<body>
  <div class="app">
    <%- include('../partials/_header.ejs') %>

    <main class="app__main">
      <div class="container">
        <h1>Login</h1>

        <form class="form" action="/login" method="POST" novalidate>
          <div class="form__group <%= errors.find(error => error.param === 'email') ? 'form__group--error' : '' %>">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="<%= previousInput.email %>" />
          </div>
  
          <div class="form__group <%= errors.find(error => error.param === 'password') ? 'form__group--error' : '' %>">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" value="<%= previousInput.password %>" />
          </div>

          <% if (errorMessage) { %>
            <div class="form__group form__group--error">
              <span><%= errorMessage %></span>
            </div>
          <% } %>

          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

          <button type="submit">Login</button>

          <a class="form__link" href="/reset-password">Forgot password?</a>
        </form>
      </div>
    </main>
  </div>
<%- include('../partials/_end.ejs') %>
